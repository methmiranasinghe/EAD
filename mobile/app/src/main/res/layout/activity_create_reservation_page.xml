<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_reservation_page">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reservation_id_create"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="76dp"
        android:hint="R00#"
        app:layout_constraintBottom_toTopOf="@+id/origin_create"
        app:layout_constraintStart_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="44dp"
        android:text="NIC"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="48dp"
        android:text="Reservation ID"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/date_create"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:hint="DD/MM/YYYY"
        app:layout_constraintBottom_toTopOf="@+id/create_reservation_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toEndOf="@+id/textView13" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/destination_create"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:hint="Destination"
        app:layout_constraintBottom_toTopOf="@+id/date_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toEndOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Reservation"
        android:textAllCaps="false"
        android:textColor="#9C27B0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="56dp"
        android:text="Origin"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="52dp"
        android:text="Destination"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:text="Reservation Date"
        app:layout_constraintBottom_toTopOf="@+id/create_reservation_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/origin_create"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:hint="Origin"
        app:layout_constraintBottom_toTopOf="@+id/destination_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toEndOf="@+id/textView11" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nic_reservation_create"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="12dp"
        android:hint="NIC"
        app:layout_constraintBottom_toTopOf="@+id/origin_create"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <Button
        android:id="@+id/create_reservation_btn"
        android:layout_width="195dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:text="Create Reservation"
        app:backgroundTint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="139dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/reservation_id_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.579"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/q2" />


</androidx.constraintlayout.widget.ConstraintLayout>