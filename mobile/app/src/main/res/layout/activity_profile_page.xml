<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_page">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/status_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="24dp"
        android:hint="Single/Married"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/password_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="24dp"
        android:hint="#####"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/update_profile_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/number_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="24dp"
        android:hint="071#######"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/status_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="28dp"
        android:hint="nimal@gmail.com"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/gender_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/gender_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:hint="Female/Male"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/number_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nic_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="28dp"
        android:hint="NIC"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/firstname_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#9C27B0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="NIC"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="First Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/firstname_profile"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Last Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/lastname_profile"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Email"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/email_profile"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Gender"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/gender_profile"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/lastname_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="32dp"
        android:hint="Last Name"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/email_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/firstname_profile"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:hint="First Name"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/lastname_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Contact Number"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/number_profile"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Status"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/status_profile"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="56dp"
        android:text="Password"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/password_profile"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/delete_profile_btn"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#9C27B0"
        android:text="Deactivate Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/update_profile_btn"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#9C27B0"
        android:text="Update Profile"
        app:layout_constraintBottom_toTopOf="@+id/delete_profile_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>